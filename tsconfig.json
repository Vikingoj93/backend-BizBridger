{
  "compilerOptions": {
    "target": "ES6", // Opcional, ajusta según tus necesidades
    "module": "commonjs",
    "outDir": "./dist", // Carpeta donde se compilarán los archivos TypeScript
    "rootDir": "./src", // Carpeta donde se encuentran los archivos TypeScript fuente
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
